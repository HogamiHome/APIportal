{
   "openapi":"3.0.1",
   "info":{
      "title":"Notification Server",
      "description":"Notification microservice for the Singapur Project. The microservice's objective is offering diferent notifications to the clients \n Email \n SMS \n Push notification \n Confluence URL: https://steps.everis.com/confluence/display/PROLEMER/Microservice+Notification+Server",
      "termsOfService":"https://www.everis.com",
      "license":{
         "name":"License",
         "url":"https://www.everis.com"
      },
      "version":"1.0.0 "
   },
   "servers":[
      {
         "url":"http://localhost:8011",
         "description":"Generated server url"
      }
   ],
   "tags":[
      {
         "name":"Notification Rest Controller"
      },
      {
         "name":"Alive Controller"
      },
      {
         "name":"Push Notification Rest Controller"
      },
      {
         "name": "Analytics Rest Controller"
      },
      {
         "name":"Email Rest Controller"
      },
      {
         "name":"Sms Rest Controller"
      }
   ],
   "paths":{
      "/notification/v1/template/{templateCode}": {
			"post": {
				"tags": ["Notification Rest Controller"],
				"summary": "Retrieve the notification template by code",
				"operationId": "getTemplateByTemplateCode",
				"parameters": [{
					"name": "templateCode",
					"in": "path",
					"required": true,
					"schema": {
						"type": "string"
					}
				}],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"additionalProperties": {
									"type": "string"
								}
							}
						}
					},
					"required": true
				},
				"responses": {
					"500": {
						"description": "Internal server error",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponse"
								}
							}
						}
					},
					"200": {
						"description": "The notification is found and it's returned to the user",
						"content": {
							"application/json;charset=UTF-8": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponseNotificationTemplateRest"
								}
							}
						}
					},
					"400": {
						"description": "Bad request \r\n",
						"content": {
							"application/json;charset=UTF-8": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponseNotificationTemplateRest"
								}
							}
						}
					}
				}
			}
		},
      "/notification/v1/sms":{
         "post":{
            "tags":[
               "Sms Rest Controller"
            ],
            "summary":"Process send sms",
            "operationId":"processSendSms",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/SendSmsRequestRest"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The notification Sms has been successfuly sent",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/pushs":{
         "post":{
            "tags":[
               "Push Notification Rest Controller"
            ],
            "summary":"Sends a push notification to the specified professional",
            "operationId":"processSendPush",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/PushNotificationRest"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The notification Push has been successfuly sent",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/notifications":{
         "get":{
            "tags":[
               "Notification Rest Controller"
            ],
            "summary":"Retrieve the notification details by the provided reference and notification status",
            "operationId":"getNotification",
            "parameters":[
               {
                  "name":"referenceId",
                  "in":"query",
                  "required":true,
                  "schema":{
                     "type":"integer",
                     "format":"int64"
                  }
               },
               {
                  "name":"appName",
                  "in":"query",
                  "required":true,
                  "schema":{
                     "type":"string"
                  }
               }
            ],
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The notification is found and it's returned to the user",
                  "content":{
                     "application/json;charset=UTF-8":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseNotificationRest"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json;charset=UTF-8":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseNotificationRest"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/emails":{
         "post":{
            "tags":[
               "Email Rest Controller"
            ],
            "summary":"Sends an email notification to the specified user",
            "operationId":"processSendEmail",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/SendEmailRequestRest"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The email has been successfuly sent",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/emails/suport":{
         "post":{
            "tags":[
               "Email Rest Controller"
            ],
            "summary":"Process send email without notification",
            "operationId":"processSendEmailWithoutNotification",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/SendEmailRequestRest"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The email has been successfuly sent",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/emails-attachment":{
         "post":{
            "tags":[
               "Email Rest Controller"
            ],
            "summary":"Sends an email with an attachment to the specified user",
            "operationId":"processSendEmailWithAttachment",
            "requestBody":{
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/SendEmailRequestRest"
                     }
                  }
               },
               "required":true
            },
            "responses":{
               "500":{
                  "description":"Internal server error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "400":{
                  "description":"Bad request \r\n",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               },
               "200":{
                  "description":"The email has been successfuly sent",
                  "content":{
                     "application/json":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      },
      "/notification/v1/analytics": {
			"post": {
				"tags": ["Analytics Rest Controller"],
				"summary": "Sends Analytics",
				"operationId": "pushAnalytics",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"additionalProperties": {
									"type": "string"
								}
							}
						}
					},
					"required": true
				},
				"responses": {
					"500": {
						"description": "Internal server error",
						"content": {
							"*/*": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponse"
								}
							}
						}
					},
					"200": {
						"description": "The analytic has been successfuly sent",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponseString"
								}
							}
						}
					},
					"400": {
						"description": "Bad request \r\n",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SingapurResponseString"
								}
							}
						}
					}
				}
			}
		},
      "/health/live":{
         "get":{
            "tags":[
               "Alive Controller"
            ],
            "operationId":"keepAlive",
            "responses":{
               "500":{
                  "description":"Internal Server Error",
                  "content":{
                     "*/*":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponse"
                        }
                     }
                  }
               },
               "200":{
                  "description":"OK",
                  "content":{
                     "application/json;charset=UTF-8":{
                        "schema":{
                           "$ref":"#/components/schemas/SingapurResponseString"
                        }
                     }
                  }
               }
            }
         }
      }
   },
   "components":{
      "schemas":{
         "SingapurResponse":{
            "type":"object",
            "properties":{
               "status":{
                  "type":"string"
               },
               "code":{
                  "type":"string"
               },
               "message":{
                  "type":"string"
               },
               "data":{
                  "type":"object"
               }
            }
         },
         "NotificationTemplateRest": {
				"required": ["id", "subject", "template", "templateCode"],
				"type": "object",
				"properties": {
					"id": {
						"type": "integer",
						"format": "int64"
					},
					"template": {
						"type": "string"
					},
					"subject": {
						"type": "string"
					},
					"templateCode": {
						"type": "string"
					}
				}
			},
			"SingapurResponseNotificationTemplateRest": {
				"type": "object",
				"properties": {
					"status": {
						"type": "string"
					},
					"code": {
						"type": "string"
					},
					"message": {
						"type": "string"
					},
					"data": {
						"$ref": "#/components/schemas/NotificationTemplateRest"
					}
				}
			},
         "SendSmsRequestRest":{
            "required":[
               "appName",
               "receiver",
               "referenceId",
               "templateCode"
            ],
            "type":"object",
            "properties":{
               "referenceId":{
                  "type":"integer",
                  "description":"Notification reference Id",
                  "format":"int64"
               },
               "appName":{
                  "type":"string",
                  "description":"Name of the aplication sending the email/push"
               },
               "templateCode":{
                  "type":"string",
                  "description":"Template used to give content to the email/push notification"
               },
               "dynamicParameters":{
                  "type":"object",
                  "additionalProperties":{
                     "type":"string",
                     "description":"List of parameters which are different in every email/push notification "
                  },
                  "description":"List of parameters which are different in every email/push notification "
               },
               "receiver":{
                  "type":"string",
                  "description":" The receiver of the email"
               }
            }
         },
         "SingapurResponseString":{
            "type":"object",
            "properties":{
               "status":{
                  "type":"string"
               },
               "code":{
                  "type":"string"
               },
               "message":{
                  "type":"string"
               },
               "data":{
                  "type":"string"
               }
            }
         },
         "PushNotificationRest":{
            "required":[
               "appName",
               "referenceId",
               "templateCode"
            ],
            "type":"object",
            "properties":{
               "referenceId":{
                  "type":"integer",
                  "description":"Notification reference Id",
                  "format":"int64"
               },
               "appName":{
                  "type":"string",
                  "description":"Name of the aplication sending the email/push"
               },
               "templateCode":{
                  "type":"string",
                  "description":"Template used to give content to the email/push notification"
               },
               "dynamicParameters":{
                  "type":"object",
                  "additionalProperties":{
                     "type":"string",
                     "description":"List of parameters which are different in every email/push notification "
                  },
                  "description":"List of parameters which are different in every email/push notification "
               },
               "deviceIdKey":{
                  "type":"string",
                  "description":"The id of the phone receiver of push notification"
               },
               "data":{
                  "type":"object",
                  "additionalProperties":{
                     "type":"string",
                     "description":"List with a data payload to be sent in a push notification"
                  },
                  "description":"List with a data payload to be sent in a push notification"
               }
            }
         },
         "NotificationRest":{
            "required":[
               "appName",
               "referenceId",
               "status",
               "templateCode",
               "type"
            ],
            "type":"object",
            "properties":{
               "id":{
                  "type":"integer",
                  "description":"Notification id",
                  "format":"int64"
               },
               "status":{
                  "type":"string",
                  "description":"Status of the notification"
               },
               "referenceId":{
                  "type":"integer",
                  "description":"Notification reference Id",
                  "format":"int64"
               },
               "templateCode":{
                  "type":"string",
                  "description":"Template used to give content to the email/push notification"
               },
               "appName":{
                  "type":"string",
                  "description":"Name of the aplication sending the email/push"
               },
               "type":{
                  "type":"integer",
                  "description":"The type of the notification",
                  "format":"int64"
               }
            }
         },
         "SingapurResponseNotificationRest":{
            "type":"object",
            "properties":{
               "status":{
                  "type":"string"
               },
               "code":{
                  "type":"string"
               },
               "message":{
                  "type":"string"
               },
               "data":{
                  "$ref":"#/components/schemas/NotificationRest"
               }
            }
         },
         "Attachment":{
            "type":"object",
            "properties":{
               "file":{
                  "type":"array",
                  "items":{
                     "type":"string",
                     "format":"byte"
                  }
               },
               "name":{
                  "type":"string"
               }
            }
         },
         "SendEmailRequestRest":{
            "required":[
               "appName",
               "receiver",
               "referenceId",
               "templateCode"
            ],
            "type":"object",
            "properties":{
               "referenceId":{
                  "type":"integer",
                  "description":"Notification reference Id",
                  "format":"int64"
               },
               "appName":{
                  "type":"string",
                  "description":"Name of the aplication sending the email/push"
               },
               "templateCode":{
                  "type":"string",
                  "description":"Template used to give content to the email/push notification"
               },
               "dynamicParameters":{
                  "type":"object",
                  "additionalProperties":{
                     "type":"string",
                     "description":"List of parameters which are different in every email/push notification "
                  },
                  "description":"List of parameters which are different in every email/push notification "
               },
               "receiver":{
                  "type":"string",
                  "description":" The receiver of the email"
               },
               "copy":{
                  "type":"string",
                  "description":"People receiving the email in copy"
               },
               "attachment":{
                  "$ref":"#/components/schemas/Attachment"
               }
            }
         }
      }
   }
}